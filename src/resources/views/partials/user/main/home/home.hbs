{{!-- Featured Articles --}}

<div class="mb-4 text-dark d-flex justify-content-between">
  <div class="col-md-6 px-0">
    <h3 class="display-5"
    style="overflow: hidden;
        display: -webkit-box; 
        -webkit-line-clamp: 3;
        line-clamp: 3;
        -webkit-box-orient: vertical;">
      <a href="/posts/{{ newestFeatured.slug }}/{{ newestFeatured.id }}" class="text-dark fw-bold text-decoration-none">{{ newestFeatured.title }}</a>
    </h3>
    <p class="lead my-3 text-secondary"
        style="overflow: hidden; 
        display: -webkit-box; 
        -webkit-line-clamp: 3;
        line-clamp: 3;
        -webkit-box-orient: vertical;">{{ newestFeatured.intro }}</p>
  </div>
  <a href="/posts/{{ newestFeatured.slug }}/{{ newestFeatured.id }}"><img src="{{ newestFeatured.bg_image }}" class="rounded" height="300"/></a>
</div>

<div class="row mb-2 border-bottom">
  {{#each featured}}
  <div class="col-md-4">
    <div class="row g-0 overflow-hidden flex-md-row mb-4 h-md-250 position-relative">
      <a href="/posts/{{ slug }}/{{ id }}"><img src="{{ bg_image }}" class="rounded w-100" height="220"/></a>
      <div class="col d-flex flex-column position-static mt-2">
        <a href="/{{ categorySlug }}" class="d-inline-block mb-2 link-success text-decoration-none">{{ category }}</a>
        <h4 class="mb-0" style="overflow: hidden; 
            display: -webkit-box; 
            -webkit-line-clamp: 2;
            line-clamp: 2;
            -webkit-box-orient: vertical;"><a href="/posts/{{ slug }}/{{ id }}" class="text-decoration-none text-dark">{{ title }}</a></h4>
        {{!-- <div class="mb-1 text-muted">{{ createdAt }}</div> --}}
        <p class="card-text mb-auto pb-1 text-secondary"
            style="overflow: hidden; 
            display: -webkit-box; 
            -webkit-line-clamp: 2;
            line-clamp: 2;
            -webkit-box-orient: vertical;">
          {{ intro }}
        </p>
        {{!-- <a href="/" class="text-decoration-none fw-bold text-dark">Nhat Hoang</a> --}}
      </div>
      {{!-- <div class="col-auto d-none d-lg-block">
        <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img" 
        aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
        <title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/>
        <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
      </div> --}}
    </div>
  </div>
  {{/each}}
</div>
{{!-- End Featured Articles --}}

<div class="row g-5">
  {{!-- Latest Articles --}}
  <div class="col-md-8">
    {{!-- <h3 class="pb-4 mb-4 fst-italic border-bottom">
      The Lastest
    </h3> --}}

    <article class="blog-post">
      <div class="">
        <div class="row mb-2" id="articles-container">
            {{#each articles}}
                {{!-- <div class="article"> --}}
                    <div class="row g-0 overflow-hidden flex-md-row mb-1 h-md-250 position-relative border-bottom">
                        <div class="col py-4 d-flex flex-column position-static">
                            <div class="d-flex row">
                                <div class="col-8">
                                  <a href="/{{ categorySlug }}" class="d-inline-block mb-2 text-success text-decoration-none">{{ category }}</a>
                                  <h5 class="mb-0"><a href="/posts/{{ slug }}/{{ id }}" class="text-decoration-none text-dark">{{ title }}</a></h5>
                                  <div class="mb-1 text-muted"><small><i class="fa-solid fa-pen"></i> {{ createdAt }}</small></div>
                                  <p class="card-text mb-auto text-secondary" 
                                  style="overflow: hidden; 
                                  display: -webkit-box; 
                                  -webkit-line-clamp: 2;
                                  line-clamp: 2;
                                  -webkit-box-orient: vertical;">
                                  {{ intro }}
                                  </p>
                                </div>
                                <div class="col-4 d-none d-lg-block">
                                    <a href="/posts/{{ slug }}/{{ id }}"><img alt="article image" class="bd-placeholder-img rounded w-100" height="140" src="{{ bg_image }}"></img></a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{!-- </div> --}}
            {{/each}}
            <div id="load-more-container" class="my-2 text-center">
              <button class="btn btn-outline-primary rounded-pill" id="load-more-btn">Load More</button>
            </div>
        </div>
      </div>
    </article>
  </div>

  <div class="col-md-4">
    <div class="position-sticky py-4" style="top: 5rem;">
      <div class="p-4 mb-3 bg-light rounded">
        <h4 class="fst-italic">About</h4>
        <p class="mb-0">Our team consists of a software engineer and a mathematician. 
          With the ambition to create a common place for IT enthusiasts who love to delve into interesting aspects of AI, Data Science, we establish this website. 
