{{!-- Featured Articles --}}

<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark d-flex">
  <div class="col-md-6 px-0">
    <h1 class="display-4 fst-italic"
    style="overflow: hidden;
        display: -webkit-box; 
        -webkit-line-clamp: 2;
        line-clamp: 2;
        -webkit-box-orient: vertical;">{{ newestFeatured.title }}</h1>
    <p class="lead my-3"
        style="overflow: hidden; 
        display: -webkit-box; 
        -webkit-line-clamp: 3;
        line-clamp: 3;
        -webkit-box-orient: vertical;">{{ newestFeatured.intro }}</p>
    <p class="lead mb-0"><a href="/posts/{{ newestFeatured.slug }}/{{ newestFeatured.id }}" class="text-white fw-bold text-decoration-none">Continue reading...</a></p>
  </div>
  <img src="https://i.imgflip.com/5jqm9r.jpg" class="w-50" height="auto"/>
</div>

<div class="row mb-2">
  {{#each featured}}
  <div class="col-md-4">
    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
      <div class="col p-4 d-flex flex-column position-static">
        <a href="/{{ categorySlug }}" class="d-inline-block mb-2 link-success text-decoration-none">{{ category }}</a>
        <h4 class="mb-0" style="overflow: hidden; 
            display: -webkit-box; 
            -webkit-line-clamp: 2;
            line-clamp: 2;
            -webkit-box-orient: vertical;"><a href="/posts/{{ slug }}/{{ id }}" class="text-decoration-none text-dark">{{ title }}</a></h4>
        {{!-- <div class="mb-1 text-muted">{{ createdAt }}</div> --}}
        <p class="card-text mb-auto pb-1"
            style="overflow: hidden; 
            display: -webkit-box; 
            -webkit-line-clamp: 2;
            line-clamp: 2;
            -webkit-box-orient: vertical;">
          {{ intro }}
        </p>
        <a href="/" class="text-decoration-none fw-bold text-dark">Nhat Hoang</a>
        <a href="/posts/{{ slug }}/{{ id }}" class="text-decoration-none">Continue reading</a>
      </div>
      {{!-- <div class="col-auto d-none d-lg-block">
        <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img" 
        aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
        <title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/>
        <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
      </div> --}}
    </div>
  </div>
  {{/each}}
</div>
{{!-- End Featured Articles --}}

<div class="row g-5">
  {{!-- Latest Articles --}}
  <div class="col-md-8">
    <h3 class="pb-4 mb-4 fst-italic border-bottom">
      The Lastest
    </h3>

    <article class="blog-post">
      <div class="">
        <div class="row mb-2" id="articles-container">
            {{#each articles}}
                {{!-- <div class="article"> --}}
                    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-1 shadow-sm h-md-250 position-relative article">
                        <div class="col p-4 d-flex flex-column position-static">
                            <a href="/{{ categorySlug }}" class="d-inline-block mb-2 text-success text-decoration-none">{{ category }}</a>
                            <div class="d-flex">
                                <div>
                                    <h3 class="mb-0"><a href="/posts/{{ slug }}/{{ id }}" class="text-decoration-none text-dark">{{ title }}</a></h3>
                                    <div class="mb-1 text-muted">{{ updatedAt }}</div>
                                    <p class="card-text mb-auto" 
                                    style="overflow: hidden; 
                                    display: -webkit-box; 
                                    -webkit-line-clamp: 2;
                                    line-clamp: 2;
                                    -webkit-box-orient: vertical;">
                                    {{ intro }}
                                    </p>
                                    <a href="/posts/{{ slug }}/{{ id }}" class="text-decoration-none">Continue reading</a>
                                </div>
                                <div class="col-auto d-none d-lg-block">
                                    <img class="bd-placeholder-img rounded" width="200" height="120" src="https://files.fullstack.edu.vn/f8-prod/blog_posts/6936/6422afa5a62f8.jpg"></img>
                                </div>
                            </div>
                        </div>
                    </div>
                {{!-- </div> --}}
            {{/each}}
            <div id="load-more-container" class="my-2">
              <button class="btn btn-warning rounded-pill w-100" id="load-more-btn">Load More</button>
            </div>
        </div>
      </div>
    </article>
  </div>

  <div class="col-md-4">
    <div class="position-sticky" style="top: 2rem;">
      <div class="p-4 mb-3 bg-light rounded">
        <h4 class="fst-italic">About</h4>
        <p class="mb-0">Our team consists of a software engineer and a mathematician. 
          With the ambition to create a common place for IT enthusiasts who love to delve into interesting aspects of AI, Data Science, we establish this website. 
