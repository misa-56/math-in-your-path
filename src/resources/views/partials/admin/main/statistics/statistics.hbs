<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Statistics</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/kingslanding">Home</a></li>
              <li class="breadcrumb-item active">Statistics</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Hoverable Table rows -->
              <div class="card">
                <div class="table-responsive text-nowrap">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th width="5%">ID</th>
                        <th>Title</th>
                        <th width="10%">Date</th>
                        <th width="5%">User</th>
                        <th width="5%">Status</th>
                        <th width="5%">Actions</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      {{#each articles}}
                        <tr>
                          <td>{{ id }}</td>
                          <td><strong>{{ title }}</strong></td>
                          <td>{{ updatedAt }}</td>
                          <td>
                              <img src="https://media.licdn.com/dms/image/D5603AQHMBSjJs4Dx-A/profile-displayphoto-shrink_800_800/0/1670769339915?e=1686182400&v=beta&t=3_QuUzhrVGOVyV7DZyzY0TuRktEVptMdTze_MNRJCtc" width="25px" height="25px" alt="Avatar" class="rounded-circle" />
                          </td>
                          <td>
                            <span class="badge bg-label-primary me-1">{{ status }}</span>
                          </td>
                          <td>
                            <!-- Messages Dropdown Menu -->
                              <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown" data-toggle="dropdown"></button>                                
                              <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                                  <a class="dropdown-item" href="/kingslanding/edit"
                                      ><i class="fas fa-edit"></i></i> Edit</a
                                  >
                                  <a class="dropdown-item" href="#"
                                      ><i class="fas fa-trash"></i></i> Delete</a
                                  >
                              </div>
                          </td>
                        </tr>
                      {{/each}}
                    </tbody>
                  </table>
                   <!-- /.card-body -->
                    <div class="card-footer clearfix">
                        <ul class="pagination pagination-sm m-0 float-right">
                        <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div>
              </div>
              <!--/ Hoverable Table rows -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->